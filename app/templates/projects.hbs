<h3>Project {{model.name}}</h3>

<p>
<strong>Project #</strong> {{model.id}}<br />
{{#if model.parent}}
<strong>Parent Project</strong> {{#link-to 'projects' model.parent.id}}{{model.parent.name}}{{/link-to}}
{{/if}}
</p>

<hr />

<h5>Activity</h5>

<p>
	Check activity over the past\n
	{{!--{{input type="number" id="datepicker" value=graphDays default="14"}} days. --}}
	<select id="daySelector" {{action 'daySelector' on='change'}}>
    	<option value="7">07</option>
    	<option value="14">14</option>
    	<option value="30">30</option>
	</select> days.
</p>
{{graphDays}}<br />
{{projectActivity}}
{{area-chart data=projectActivity options=options}}
<p><strong>Debug mode enabled</strong></p>

<hr />

<p><strong class="red">Issues in this project:</strong></p>

	<div class="masonry">
		{{#each model.issues as |issues|}}
			{{#link-to 'issues' issues.id}}
				{{#issue-detail-card id=issues.id updated=issues.updated_on projectid=issues.project.id project=issues.project.name}}
					{{issues.subject}}
				{{/issue-detail-card}}
			{{/link-to}}
		{{else}}
			<p>There are no issues in this project</p>
		{{/each}}

		{{#each model as |projects|}}
			{{model.parent.name}}
		{{/each}}
	</div>