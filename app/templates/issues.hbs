<section class="row">

<h5>Issue {{model.id}}</h5>

	<div class="one-half column">
		<p>
		<strong>Ticket #</strong> {{model.id}}<br />
		<strong>Project:</strong> {{#link-to 'projects' model.project.id}}{{model.project.name}}{{/link-to}}<br />
		<strong>Tracker:</strong> {{model.tracker.name}}<br />
		<strong>Priority:</strong> {{model.priority.name}}<br />
		<strong>Author:</strong> {{model.author.name}}
		</p>
	</div>
	<div class="one-half column">
		<strong>Status:</strong> {{model.status.name}}<br />
		<strong>Last updated:</strong> {{moment-from-now model.updated_on}}<br />
		<strong>Created:</strong> {{moment-format model.created_on 'LL'}}<br /><br />
		<strong>Assigned to:</strong> {{model.assigned_to.name}}
	</div>
</section>

<hr />

<h5>{{model.subject}}</h5>
<p>{{model.description}}</p>

<hr />

<h5>Activity</h5>

{{#if activity}}
	{{activity}}<br />
{{else}}
	<p>No activity</p>
{{/if}}

{{#each-in model.journals as |index id|}}
    Grabbing all objects : {{index}} <br />
    {{#each-in id as |keys value|}}
    	   	Key: {{keys}} -- Value: <strong>{{value}}</strong><br />
    {{/each-in}}
	<br />
{{else}}
	<p>There was no activity.</p>
{{/each-in}}

{{area-chart data=model.issue.activity options=options}}