<h4>Dashboard</h4>

<section id="dashboard" class="row">
	<div class="two-thirds column">
		{{search-box value=search}}

	</div>
	<div class="one-third column">
		<p class="note card">
			The search allows you to look through issues and projects - ultimately enableling you too add multiple ones and to generate an activity graph.
		</p>
	</div>
</section>

<hr />

	{{#if search}}
	<p>Here are the results for <strong>{{search}}</strong></p>
	{{else}}
	<p>This is happening right now:</p>
	{{/if}}

    	{{#each queryResults as |result index|}}
    	{{#link-to 'issues' result}}
            {{#issue-detail-card id=result.id updated=result.updated_on projectid=result.project.id project=result.project.name}}
						{{result.subject}}
			{{/issue-detail-card}}
		{{/link-to}}
    	{{/each}}

